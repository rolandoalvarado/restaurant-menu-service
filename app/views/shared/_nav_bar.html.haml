.container
  .navbar-header
    = link_to t('header.title'), root_path, class: 'navbar-brand'
  #navbar
    %ul.nav.navbar-nav
      %li= link_to t('navigation.home'), root_path
    %ul.nav.navbar-nav.pull-right
      - if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            = current_user.full_name
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li= link_to t('navigation.profile'), edit_user_registration_path
            %li= link_to t('navigation.logout'), destroy_user_session_path, method: :delete
      - else
        %li= link_to t('navigation.login'), new_user_session_path
